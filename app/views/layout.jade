block vars

doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title=title
		link(rel='icon', href='assets/images/favicon.png', type='image/x-icon')
		base(href='/')
		link(href='/assets/css/style.css', rel='stylesheet')
		link(href='/assets/css/webfont.css', rel='stylesheet')
		link(href='/assets/css/angular-datepicker-default.time.css', rel='stylesheet')
		link(href='/assets/css/loading-bar.min.css', rel='stylesheet')
		link(href='/assets/css/angular-datepicker-default.css', rel='stylesheet')
		link(href='/assets/css/angular-datepicker-default.date.css', rel='stylesheet')
		link(href='/assets/css/angular-datepicker-default.time.css', rel='stylesheet')
		link(href='/assets/css/dropzone.min.css', rel='stylesheet')
		link(href='/assets/css/toastr.min.css', rel='stylesheet')
		link(href='/assets/css/parsley.css', rel='stylesheet')
	body(flow-prevent-drop)
		div(ng-app="eventApp", ng-controller="layoutController as layoutController").container
			div.leftSidebar
				header.logo
					a(href="/")
				if locals.user
					div.userBlock
						a(href="#")
							// User icons
							//img(src="/assets/images/avatars/#{locals.user.username}.png")
							span #{locals.user.username}
							div.arrow
				nav.leftNavigation
					each navsection in ["Dashboard", "Events", "Data", "Users"]
						a(id=navsection, href="/" + navsection.toLowerCase(), class=currentPage == navsection ? 'active' : '')
							span.text= navsection 
			div.rightView
				block content 
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
		script(src='/assets/js/angular.min.js')
		script(src='/assets/js/angular-datepicker.js')
		script(src='/assets/js/angular-animate.min.js')
		script(src='/assets/js/loading-bar.min.js')
		script(src='/assets/js/angular-resource.js')
		script(src='/assets/js/angular-route.js')
		script(src='/assets/js/toastr.min.js')
		block scripts
